      </select>
    </div>
    <div class="form-group col-md-2">
      <input name="zip" value="@ViewBag.theUser.zip" class="form-control">
    </div>
  </div>
  <input type="submit" value="Update" class="btn btn-round btn-success">
</form>
    </div>
</div>
