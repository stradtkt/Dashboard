@{
    ViewData["Title"] = "Edit User";
}
<div class="row">
    <div class="col-md-10 offset-1">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <form action="/@ViewBag.theUser.user_id/ProcessEditUser" method="POST">
     <div class="form-row">
    <div class="form-group col-md-4">
      <input name="first_name" value="@ViewBag.theUser.first_name" class="form-control">
    </div>
    <div class="form-group col-md-4">
      <input name="last_name" value="@ViewBag.theUser.last_name" class="form-control">
    </div>
        <div class="form-group col-md-4">
      <input name="phone" value="@ViewBag.theUser.phone" class="form-control">
    </div>
    </div>
  <div class="form-row">
    <div class="form-group col-md-12">
      <input name="email" value="@ViewBag.theUser.email" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <input name="address" value="@ViewBag.theUser.address" class="form-control">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <input name="city" value="@ViewBag.theUser.city" class="form-control">
    </div>
    <div class="form-group col-md-4">
