@model Dashboard.Models.Product
@{
    ViewData["Title"] = "Add Product";
}
<div class="row">
    <div class="col-12 col-sm-8 col-md-8 col-lg-8 col-xl-8 offset-2 mt-5 mb-5">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <form asp-action="ProcessProduct" asp-controller="Home" method="POST">
            <div class="form-group">
                <input asp-for="name" class="form-control" placeholder="Product Name">
            </div>
            <div class="form-group">
                <input asp-for="short_desc" class="form-control" placeholder="Short Description">
            </div>
            <div class="form-group">
                <textarea asp-for="desc" class="form-control" placeholder="Description" cols="30" rows="10"></textarea>
            </div>
            <div class="form-group">
                <input asp-for="price" class="form-control" placeholder="Price">
            </div>
            <div class="form-group">
                <input asp-for="weight" class="form-control" placeholder="Product Weight">
            </div>
            <div class="form-group">
                <input asp-for="qty" class="form-control" placeholder="Quantity">
            </div>
            <div class="form-group">
            <div class="fileinput fileinput-new" data-provides="fileinput">
            <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
            </div>
            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
            <div>
                <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><input type="file" name="image"></span>
                <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
            </div>
            </div>
            </div>
            <input type="submit" value="Add Product" class="btn btn-round btn-info">
        </form>
</div>
</div>
