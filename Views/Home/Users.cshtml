@{
    ViewData["Title"] = "Users";
}

<div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-5 mb-5">
		<div class="card">
        			<table class="table table-hover text-center">
						<thead class="thead-dark">
							<tr>
								<th>ID</th>
								<th>Name</th>
								<th>Email</th>
								<th>Address</th>
								<th>Phone</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
                            @foreach (var u in ViewBag.users)
                            {
                                <tr>
									<td>@u.user_id</td>
									<td>@u.first_name @u.last_name</td>
									<td>@u.email</td>
									<td>@u.address @u.city, @u.state @u.zip</td>
									<td>@u.phone</td>
									<td>
                                        <a href="" class="btn btn-round btn-info">Profile</a>
                                        <a href="" class="btn btn-round btn-warning">Edit</a>
                                        <a href="" class="btn btn-round btn-danger">Delete</a>
                                    </td>
								</tr>   
                            }
						</tbody>
					</table>
		</div>
	</div>
    </div>